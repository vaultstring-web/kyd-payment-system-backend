# ==============================================================================
# DOCKER CONFIGURATIONS
# ==============================================================================

# Base Dockerfile - build/docker/Dockerfile.base
FROM golang:1.24.4-alpine AS builder

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git ca-certificates tzdata

# Copy go mod files
COPY go.mod go.sum ./
COPY third_party ./third_party
RUN go mod download

# Copy source code
COPY . .

